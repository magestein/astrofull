---
import "../styles/globals.css";
interface Props {
  title: string;
}

import ViewTransitions from "astro/components/ViewTransitions.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-gray-900 text-white">
    <div id="__astro-root">
      <header class="p-4 border-b border-gray-700">
        <nav class="flex items-center justify-between">
          <div>
            <a href="/post" class="text-xl font-bold">Logo</a>
          </div>
          <div class="space-x-4">
            <a href="/post" class="hover:text-gray-400">Post</a>
            <a href="/user" class="hover:text-gray-400">Users</a>
            <a href="/roles" class="hover:text-gray-400">Roles</a>
            <a href="/about" class="hover:text-gray-400">About</a>
          </div>
          <div>
            <a
              href="/dashboard"
              class="bg-purple-600 px-4 py-2 rounded text-white">Dashboard</a
            >
          </div>
        </nav>
      </header>
      <main class="p-8 flex-1">
        <slot />
      </main>
      <footer class="p-4 border-t border-gray-700 mt-8">
        <div class="flex justify-between">
          <div>
            <a href="/terms" class="hover:text-gray-400">Terms</a>
            <a href="/privacy-policy" class="hover:text-gray-400"
              >Privacy Policy</a
            >
          </div>
          <div class="space-x-4">
            <a href="/documentation" class="hover:text-gray-400"
              >Documentation</a
            >
          </div>
          <div class="space-x-4">
            <a href="/about" class="hover:text-gray-400">About</a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
